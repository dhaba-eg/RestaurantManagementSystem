@page "/order"

<div class="order-layout">
    <!-- Sidebar remains constant -->
    <Sidebar OnTabChange="HandleTabChange" />

    <!-- Main content changes based on the active tab -->
    <div class="main-content">
        @if (activeTab == "menu")
        {
            <Menu />
        }
        else if (activeTab == "payments")
        {
            <Payments />
        }
        else if (activeTab == "ai")
        {
            <AIRecommendations />
        }
    </div>
</div>

@code {
    private string activeTab = "menu"; // Default to menu tab

    private void HandleTabChange(string tabName)
    {
        activeTab = tabName;
    }
}
